<div class="simple-calendar">
  <div class="calendar-heading row">
    <div class="col-md-2 calendar-relative"></div>
    <div id="i-container" class="col-md-1">
      <i class='fas fa-chevron-left calendar_prev'></i>
    </div>
    <h2 class="text-center col-md-6"><span class="calendar-title"><%= t('date.month_names')[start_date.month].titleize %> <%= start_date.year %></span></h2>
    <div id="i-container" class="col-md-1">
      <i class='fas fa-chevron-right calendar_next'></i>
    </div>
    <div class="col-md-2"></div>
  </div>

  <table class="table table-striped">
    <thead>
    <tr>
      <% date_range.slice(0, 7).each do |day| %>
        <th><%= t('date.abbr_day_names')[day.wday] %></th>
      <% end %>
    </tr>
    </thead>

    <tbody>
    <% date_range.each_slice(7) do |week| %>
      <tr>
        <% week.each do |day| %>
          <%= content_tag :td, class: calendar.td_classes_for(day) do %>
            <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
              <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
            <% else %>
              <% block.call day, sorted_events.fetch(day, []) %>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
