<head>
  <%= stylesheet_link_tag 'user_space', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <title>Espace adhérent du site Vital'Marche</title>
</head>
<% if @pop_up != nil && session[:pop_up] != 1 %>
  <% session[:pop_up] = 1 %>
  <div class="modal" tabindex="-1" id="myModal" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Évenement à venir !</h5>
        </div>
        <div class="modal-body">
          <p>Le <%= @pop_up.date.day %>-<%= @pop_up.date.mon %>-<%= @pop_up.date.year %> à <%= @pop_up.date.hour %>
            :<%= @pop_up.date.min %>, à <%= @pop_up.position %>, aura lieu <%= @pop_up.title %>.</p>
          <hr>
          <div class="modal-body row">
            <% if @pop_up.picture.to_s.length > 1 %>
              <div class="col-md-4">
                <img class="event-picture" alt="Photo pop-up" <%= image_tag @pop_up.picture.to_s %>
              </div>
              <div class="col-md-8">
                <%= raw(@pop_up.content) %>
              </div>
            <% else %>
              <div class="col-md-12">
                <%= raw(@pop_up.content) %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-modal-primary">OK</button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<nav class="navbar navbar-default navbar-fixed green no-background bootsnav">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
        <i class="fa fa-bars"></i>
      </button>
      <a class="navbar-brand" href="#brand">

        <img class="logo logo-display m-top-10" <%= image_tag "logo.png" %>
        <img class="logo logo-scrolled"  <%= image_tag "logo.png" %>

      </a>
    </div>
    <!-- End Header Navigation -->

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-menu">
      <ul class="nav navbar-nav navbar-right blue" data-in="fadeInDown" data-out="fadeOutUp">
        <li><a href="#planning">PLANNING</a></li>
        <li><a href="#pdf">GAZETTES</a></li>
        <li><a href="#form">QUESTIONNAIRE</a></li>
        <li> <%= link_to "RETOUR ACCUEIL", root_path, data: {turbolinks: false} %> </li>
        <% if user_signed_in? %>
          <li class="nav-item hvr-grow">
            <%= link_to raw('<i class="fas fa-power-off"></i> <span class="d-md-none"></span>'), destroy_user_session_path, class: "nav-link-danger", title: "Déconnexion", method: :delete %>
          </li>
        <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<section class="user_space-slide">
  <div class="container ">
    <div class="row bck_layer">
      <div class="user_space_buttons">
        <div class="main_home user_space_text_div col-md-12">
          <div>
            <h1 class="user_space_text">Bienvenue sur votre espace adherents</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="planning" class="">
  <br>
  <br>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="about_content">
          <h2 class="text-blue">PLANNING</h2>
          <div class="separator_left"></div>
        </div>
      </div>
    </div>
    <div class="row d-flex justify-content-center">
      <div class="col-md-8 google-calendar">
        <iframe src="https://calendar.google.com/calendar/b/3/embed?height=600&amp;wkst=1&amp;bgcolor=%23ffffff&amp;ctz=Europe%2FParis&amp;src=Y29udGFjdHZpdGFsbWFyY2hlQGdtYWlsLmNvbQ&amp;color=%2322AA99&amp;showTitle=0&amp;showNav=1&amp;showDate=1&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0" style="border-width:0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
      </div>
    </div>

  </div>
  </div>
</section>



<section id="pdf" class="new fix">
  <div class="overlay"></div>
  <div class="container">
    <br>
    <br>
    <br>
    <div class="row">
      <div class="main_new">
        <div class="head_title text-center row">
          <div class="col-md-5">
            <i class='fas fa-chevron-left slid_prev text-white'></i>
          </div>
          <h2 class="col-md-2 text-white">GAZETTE</h2>
          <div class="col-md-5">
            <i class='fa fas fa-chevron-right slid_next text-white'></i>
          </div>

        </div>
        <div class="row">
          <div class="pdf_slid text-center">
            <% if (@pdfs.empty? != true) && (@pdfs.nil? != true) %>
              <% @pdfs.each do |pdf| %>
                <div class="pdf_item pdf-container row ">
                  <div class="pdf-content">
                    <img class="pdf-img" <%= image_tag pdf.file.to_s %>
                  </div>
                  <br>
                  <div class="test_authour article_text">
                    <h4 class="text-white"><%= pdf.title %></h4>
                  </div>
                  <div class="m-bottom-20">
                    <%= link_to "Consulter", pdfjs.full_path(file: pdf.file), class: "btn btn-primary", target: :_blank %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <br>
        <br>
        <br>
      </div>
    </div>
  </div>
</section>

<section id="form" class="about m-bottom-90 m-top-90">
  <div class="container">
    <div class="main_about">
      <div class="row">
        <div class="col-md-6">
          <div class="about_content">
            <br>
            <br>
            <h2>QUESTIONNAIRE</h2>
            <div class="separator_left"></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <p>
            <% if @text_form != nil %>
              <%= raw(@text_form.content) %>
            <% else %>
              Veuillez remplir le questionnaire disponible en cliquant sur le bouton ci-dessous s'il vous plaît.
            <% end %>
          </p>
          <br>
          <br>
          <br>
          <%= link_to "Google Form", @form.url, class: "btn btn-primary text-white", target: :_blank %>
          <br>
          <br>
        </div>
        <div class="col-md-6">
          <% if @picture_form != nil %>
            <img class="join" <%= image_tag @picture_form.picture.to_s %>
          <% else %>
            <img class="join" <%= image_tag "image.jpg" %>
          <% end %>
        </div>
      </div>
      <% if current_user %>
        <div class="row">
          <div class="col-md-12 text-center m-top-40">
            <%= link_to "Supprimer mon compte", admin_destroy_user_path(current_user), class: "btn btn-danger", method: :delete, data: {confirm: "Êtes-vous sûrs de vouloir supprimer votre compte ?"} %>

          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<%= javascript_include_tag 'simple_user.js', 'data-turbolinks-track': 'reload' %>
<script>
    <% if @pop_up != nil %>
    $(window).on('load', function () {
        $('#myModal').modal('show');
    });
    <% end %>
    $(document).ready(function () {
        $("#quitButton").click(function () {
            $("#quitModal").modal();
        });
    });
</script>



