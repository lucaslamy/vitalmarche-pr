<body data-spy="scroll" data-target=".navbar-collapse">
<div class="culmn">
  <nav class="navbar navbar-default navbar-fixed green no-background bootsnav">
    <div class="container">

      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-menu">
          <em class="fas fa-ellipsis-v"></em>
        </button>
        <div class="navbar-brand">
          <img class="logo logo-display m-top-10" alt="Logo Vital'Marche" <%= image_tag "logo.png" %>
          <img class="logo logo-scrolled" alt="Logo Vital'Marche" <%= image_tag "logo.png" %>
        </div>
      </div>

      <div class="collapse navbar-collapse" id="navbar-menu">
        <ul class="nav navbar-nav navbar-right blue" data-in="fadeInDown" data-out="fadeOutUp">
          <li><a href="#planning">PLANNING</a></li>
          <li><a href="#pdf">GAZETTES</a></li>
          <li><a href="#form">QUESTIONNAIRE</a></li>
          <li> <%= link_to "RETOUR ACCUEIL", root_path, data: {turbolinks: false} %> </li>
          <% if user_signed_in? %>
            <li class="nav-item hvr-grow">
              <%= link_to raw('<i class="fas fa-power-off"></i> <span class="d-md-none"></span>'), destroy_user_session_path, class: "nav-link-danger", title: "Déconnexion", method: :delete %>
            </li>
          <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <section class="user_space-slide page">
    <div class="container ">
      <div class="row bck_layer">
        <div class="user_space_buttons">
          <div class="main_home user_space_text_div col-md-12">
            <div>
              <h1 class="user_space_text">Bienvenue <b><%= session[:user].name %></b></h1>
            </div>
            <div>
              <% if session[:user] %>
                <% if session[:user].email == 'contactvitalmarche@gmail.com' %>
                  <div class="col-12 m-top-100">
                    <%= link_to "Espace administrateur", admin_users_path, class: "btn btn-outline-primary col-md-12" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="planning" class="page">
    <br>
    <br>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="about_content">
            <h2 class="text-blue">PLANNING</h2>
            <div class="separator_left"></div>
          </div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="responsiveCal">
          <iframe class="cal" src="https://calendar.google.com/calendar/b/3/embed?height=600&amp;wkst=1&amp;bgcolor=%23ffffff&amp;ctz=Europe%2FParis&amp;src=Y29udGFjdHZpdGFsbWFyY2hlQGdtYWlsLmNvbQ&amp;color=%2322AA99&amp;showTitle=0&amp;showNav=1&amp;showDate=1&amp;showTabs=0&amp;showCalendars=0&amp;showTz=0" scrolling="yes"></iframe>
        </div>
      </div>

    </div>
  </section>
  <% if @on_top_pdf.nil? %>
  <% else %>
    <section id="pdf" class="new fix page">
      <div class="overlay"></div>
      <div class="container">
        <br>
        <br>
        <br>
        <div class="row">
          <div class="main_new">
            <div class="row on-top-pdf">
              <%= pdfjs_viewer pdf_url: @on_top_pdf.file, style: :full %>
            </div>
            <br>
            <br>
            <br>
          </div>
        </div>
      </div>
    </section>
  <% end %>
  <section class="new fix">
    <div class="overlay"></div>
    <div class="container">
      <br>
      <br>
      <br>
      <div class="row">
        <div class="main_new">
          <div class="head_title text-center row">
            <div class="col-xs-3">
              <i class='fas fa-chevron-left slid_prev text-white'></i>
            </div>
            <h2 class="col-xs-6 text-white">AUTRES GAZETTES</h2>
            <div class="col-xs-3">
              <i class='fa fas fa-chevron-right slid_next text-white'></i>
            </div>

          </div>
          <div class="row">
            <div class="pdf_slid text-center">
              <% if (@pdfs.empty? != true) && (@pdfs.nil? != true) %>
                <% @pdfs.each do |pdf| %>
                  <div class="pdf_item pdf-container row ">
                    <div class="test_authour article_text">
                      <h4 class="text-white"><%= pdf.title %></h4>
                    </div>
                    <div class="m-bottom-20">
                      <%= link_to "Consulter", pdfjs.full_path(file: pdf.file), class: "btn btn-primary", target: :_blank %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <br>
          <br>
          <br>
        </div>
      </div>
    </div>
  </section>
  <section id="form" class="about m-bottom-90 m-top-90 page">
    <div class="container">
      <div class="main_about">
        <div class="row">
          <div class="col-md-6">
            <div class="about_content">
              <br>
              <br>
              <h2>QUESTIONNAIRE</h2>
              <div class="separator_left"></div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <p>
              <% if @text_form != nil %>
                <%= raw(@text_form.content) %>
              <% else %>
                Veuillez remplir le questionnaire disponible en cliquant sur le bouton ci-dessous s'il vous plaît.
              <% end %>
            </p>
            <br>
            <br>
            <br>
            <%= link_to "Google Form", @form.url, class: "btn btn-primary text-white", target: :_blank %>
            <br>
            <br>
          </div>
          <div class="col-xs-6">
            <% if @picture_form != nil %>
              <img class="join" <%= image_tag @picture_form.picture.to_s %>
            <% else %>
              <img class="join" <%= image_tag "image.jpg" %>
            <% end %>
          </div>
        </div>
        <% if current_user %>
          <div class="row">
            <div class="col-md-12 text-center m-top-40">
              <%= link_to "Supprimer mon compte", admin_destroy_user_path(current_user), class: "btn btn-danger", method: :delete, data: {confirm: "Êtes-vous sûrs de vouloir supprimer votre compte ?"} %>

            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
</body>
<%= javascript_include_tag 'simple_user.js', 'data-turbolinks-track': 'reload' %>
<script>
    <% if @pop_up != nil %>
    $(window).on('load', function () {
        $('#myModal').modal('show');
    });
    <% end %>
    $(document).ready(function () {
        $("#quitButton").click(function () {
            $("#quitModal").modal();
        });
    });
    function changeTitle() {
        var title = 'Vital\'Marche - Espace adhérent';
        var current_title = $(document).prop('title');
        if (current_title.indexOf('>>>') == -1) {
            setTimeout(changeTitle, 3000);
            $(document).prop('title', title);
        }
    }
    changeTitle();
</script>




